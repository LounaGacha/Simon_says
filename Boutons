class Boutons {
  int ID;
  float x,y;
  float sizeW;
  float sizeH;
  float start;
  float stop;
  int mode;
  color couleur;
  color darkCouleur;
  
  boolean lightOn = false;
  
  Boutons(int tempID, float tempx,float tempy,float tempsizeW , float tempsizeH, float tempstart,float tempstop, int tempmode,color tempcouleur){
   ID = tempID;
   x = tempx;
   y = tempy;
   sizeW = tempsizeW;
   sizeH = tempsizeH;
   start = tempstart;
   stop = tempstop;
   mode = tempmode;
   couleur = tempcouleur;
    
   darkCouleur = lerpColor(0, couleur, 0.5);
   
  }
void display() {
  
  if(lightOn){
   fill(couleur);
  }
  else {
    fill(darkCouleur);
  }
 arc(x,y,sizeW,sizeH,start,stop,mode);
  }

boolean mouseBoutonV() {
  
  if(mouseX <= x && mouseX >= x-sizeW/2 && 
  mouseY <= y && mouseY >= y-sizeW/2 ) {
    return true;
  }
  else {
  return false;
  }
}

boolean mouseBoutonR() {
  
  if(mouseX >= x && mouseX <= x+sizeW/2 && 
  mouseY <= y && mouseY >= y-sizeW/2 ) {
    return true;
  }
  else {
  return false;
  }
}

boolean mouseBoutonJ() {
  
  if(mouseX <= x && mouseX >= x-sizeW/2 && 
  mouseY >= y && mouseY <= y+sizeW/2 ) {
    return true;
  }
  else {
  return false;
  }
}

boolean mouseBoutonB() {
  
  if(mouseX >= x && mouseX <= x+sizeW/2 && 
  mouseY >= y && mouseY <= y+sizeW/2 ) {
    return true;
  }
  else {
  return false;
  }
 }
}
